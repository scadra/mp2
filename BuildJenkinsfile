pipeline {

    agent {
        label 'master'
    }

    tools {
        nodejs "nodejs-14.15.0"
    }

    params {
        string(name: 'release.version', defaultValue: '', description: 'Version of artifact agora-front-VERSION-bin.zip')
    }

    stages {
        stage('Dependencies') {
            options {
                timeout(time: 20, unit: 'MINUTES')
            }
            steps {
                sh 'node -v'
                sh 'npm --version'
                sh 'npm install'
            }
        }

        stage('Build') {
            options {
                timeout(time: 10, unit: 'MINUTES')
            }
            steps {
                sh 'npm run build'
                zip dir: 'dist', zipFile: 'agora-front-AUTO-SNAPSHOT-bin.zip', archive: true
            }
        }

        stage('Publish') {
            steps {
                // TODO
                sh 'ls -l dist'
            }
        }
    }

    post {
        regression {
            
        }
    }
}
