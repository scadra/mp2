pipeline {

    agent any

    options {
        disableConcurrentBuilds()
        buildDiscarder(logRotator(daysToKeepStr: '15', numToKeepStr: '5'))
    }

    triggers {
        gitlab(triggerOnPush: true, branchFilterType: 'All')
    }

    tools {
        nodejs "nodejs-14.15.0"
    }

    stages {
        stage('Deps') {
            options {
                timeout(time: 20, unit: 'MINUTES')
            }
            steps {
                sh 'node -v'
                sh 'npm --version'
                sh 'npm install'
            }
        }

        stage('Build') {
            options {
                timeout(time: 10, unit: 'MINUTES')
            }
            steps {
                sh 'npm run build'
                zip dir: 'dist', zipFile: 'result.zip', archive: true
                //zip dir: 'dist', zipFile: 'result.zip', archive: true
            }
        }

        stage('Report') {
            steps {
                // TODO
                sh 'ls -l dist'
                sh 'ls -l result.zip'
            }
        }
    }

    post {
        always {
            deleteDir()
            mail subject: 'Test email from Jenkins', from: 'Jenkins <jenkins@luxhub.com>', to: 'patrice.jacquot@luxhub.com', body: 'Test email from Jenkins'
        }
    }
}
